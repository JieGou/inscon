@using System.Web.Optimization
@using BootstrapSupport
@using NavigationRoutes
<!DOCTYPE html>
<html lang="en">
    <head>a
        <meta charset="utf-8">
        <title>@ViewBag.Title</title>
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link href="@Styles.Url("~/content/css")" rel="stylesheet"/>
	<link href="@Styles.Url("~/Content/css-responsive")" rel="stylesheet" type="text/css" />
        @RenderSection("head", required: false)
        @Html.Partial("_html5shiv")
        @* favicons and touch icons go here *@
    </head>
    <body>
        <div class="navbar navbar-inverse navbar-static-top">
            <div class="navbar-inner">a
                <div class="container">
                    <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </a>
                    <a class="brand" href="/"><i class="icon-home icon-white"></i>Client Dashboard</a>
                    <div class="nav-collapse">
                        <ul class="nav">
                            @if (User.Identity.IsAuthenticated)
                            {
                                @Html.Navigation()
                            }
                        </ul>
                        <ul class="nav pull-right">
                                @if (User.Identity.IsAuthenticated)
                                {
                                    <li class="dropdown">
                                        <a href="/" class="dropdown-toggle" data-toggle="dropdown">Welcome, @User.Identity.Name <b class="caret"></b></a>
                                        <ul class="dropdown-menu">
                                            <li>@Html.ActionLink("Change Password", "ChangePassword", "Account")</li>
                                        </ul>
                                    </li>
                                    <li>@Html.ActionLink("Sign Off", "LogOff", "Account")</li>
                                }
                                else
                                {
                                    <li>@Html.ActionLink("Sign In", "LogOn", "Account")</li>
                                    
                                }
                        </ul>
                    </div><!--/.nav-collapse -->
                </div>
            </div>
        </div>        
        <div class="container">
            @Html.Partial("_alerts")
            @RenderBody()   
            <hr>
            <footer>
                <p>&copy; Company @System.DateTime.Now.ToString("yyyy")</p>
                
            </footer> 
        </div>
         @Scripts.Render("~/Scripts/jquery-1.9.0.js",
                "~/Scripts/bootstrap.js",
                "~/Scripts/jquery.validate.js",
                "~/scripts/jquery.validate.unobtrusive.js",
                "~/Scripts/jquery.validate.unobtrusive-custom-for-bootstrap.js",
                "~/Scripts/jquery-ui-1.10.0.js")

         @RenderSection("Scripts", required: false)
        
        <script type='text/javascript'>
            $(document).ready(function() {
                $('.datepicker').datepicker();
            });
            
            // Grab focus on first field that has error 
            $(function () {
                $("input[type=text]").first().focus();
            });
        </script>
    </body>
</html>

